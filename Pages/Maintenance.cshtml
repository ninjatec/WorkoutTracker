@page
@model WorkoutTrackerWeb.Pages.MaintenanceModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    <meta name="theme-color" content="#455A64" />
    
    <!-- Favicon -->
    <link rel="icon" href="~/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/icons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/icons/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/icons/apple-touch-icon.png" />
    
    <title>Maintenance - WorkoutTracker.online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        
        .maintenance-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        
        .maintenance-card {
            max-width: 700px;
            width: 100%;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        
        .maintenance-header {
            background-color: var(--primary-color);
            padding: 2rem;
            text-align: center;
            color: white;
        }
        
        .maintenance-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            display: block;
        }
        
        .estimated-time {
            display: inline-block;
            background-color: rgba(255, 255, 255, 0.2);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            margin-top: 1rem;
        }
        
        .footer {
            background-color: #343a40;
            color: white;
            padding: 1rem 0;
            text-align: center;
            margin-top: auto;
        }
        
        .social-links a {
            color: white;
            margin: 0 0.5rem;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid container-mobile-friendly">
                <a class="navbar-brand" href="/">
                    <img src="~/images/Logo_Without_Words.png" alt="Workout Tracker Logo" class="navbar-logo" />
                    <span class="desktop-only">WorkoutTracker.online</span>
                </a>
            </div>
        </nav>
    </header>
    
    <div class="maintenance-container">
        <div class="maintenance-card">
            <div class="maintenance-header">
                <i class="bi bi-tools maintenance-icon"></i>
                <h1 class="display-5 fw-bold">We're under maintenance</h1>
                <p class="lead">We're working hard to improve WorkoutTracker for you</p>
                <div class="estimated-time">
                    <i class="bi bi-clock"></i> Estimated completion: @Model.EstimatedCompletionTime
                </div>
            </div>
            <div class="card-body bg-white p-4">
                <h5 class="card-title">What's happening?</h5>
                <p class="card-text">
                    We're performing scheduled maintenance to enhance our systems and improve your experience. 
                    During this time, the application will be unavailable.
                </p>
                <h5 class="card-title mt-4">What should I do?</h5>
                <p class="card-text">
                    Please check back later. We appreciate your patience and understanding as we work to make 
                    WorkoutTracker even better for you.
                </p>
                <div class="text-center mt-4">
                    <p class="text-muted">
                        <i class="bi bi-info-circle"></i> 
                        If you need urgent assistance, please contact our support team.
                    </p>
                    <a href="mailto:support@workouttracker.online" class="btn btn-outline-primary">
                        <i class="bi bi-envelope"></i> Contact Support
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <footer class="border-top footer mt-5">
        <div class="container-fluid container-mobile-friendly py-2">
            <div class="row">
                <div class="col-12 col-md-6 mb-2 mb-md-0 text-center text-md-start">
                    <div class="d-flex flex-column flex-sm-row align-items-center align-items-md-start justify-content-center justify-content-md-start">
                        <img src="~/images/Logo_With_words.png" alt="Workout Tracker Logo" class="footer-logo mb-2 mb-sm-0 me-sm-2" />
                        <div>
                            <span class="d-block d-sm-inline-block me-sm-2 text-muted">&copy; @DateTime.Now.Year - Ninjatec</span>
                            <a asp-area="" asp-page="/Privacy" class="text-muted">Privacy</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>