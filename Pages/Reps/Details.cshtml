@page
@model WorkoutTrackerWeb.Pages.Reps.DetailsModel

@{
    ViewData["Title"] = "Rep Details";
}

<h1>Rep Details</h1>

<div class="card mb-4">
    <div class="card-header">
        <h4>Session Information</h4>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Session</th>
                <td>@Html.DisplayFor(model => model.Rep.Sets.Session.Name)</td>
            </tr>
            <tr>
                <th>Date/Time</th>
                <td>@Model.Rep.Sets.Session.datetime.ToString("dd/MM/yy HH:mm")</td>
            </tr>
            <tr>
                <th>Exercise Type</th>
                <td>@Html.DisplayFor(model => model.Rep.Sets.ExerciseType.Name)</td>
            </tr>
            <tr>
                <th>Set Type</th>
                <td>@Html.DisplayFor(model => model.Rep.Sets.Settype.Name)</td>
            </tr>
        </table>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4>Rep Information</h4>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Rep Number</th>
                <td>@Html.DisplayFor(model => model.Rep.repnumber)</td>
            </tr>
            <tr>
                <th>Weight (kg)</th>
                <td>@Html.DisplayFor(model => model.Rep.weight)</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    @if (Model.Rep.success)
                    {
                        <span class="badge bg-success">Success</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Failed</span>
                    }
                </td>
            </tr>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Rep.RepId" class="btn btn-primary">Edit</a>
    <a asp-page="/Sets/Details" asp-route-id="@Model.Rep.SetsSetId" class="btn btn-secondary">Back to Set</a>
    <a asp-page="./Index" class="btn btn-secondary">All Reps</a>
</div>
