@page
@model WorkoutTrackerWeb.Pages.Reps.DeleteModel

@{
    ViewData["Title"] = "Delete Rep";
}

<h1>Delete Rep</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this rep?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h4>Session Information</h4>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Session</th>
                <td>@Html.DisplayFor(model => model.Rep.Sets.Session.Name)</td>
            </tr>
            <tr>
                <th>Exercise Type</th>
                <td>@Html.DisplayFor(model => model.Rep.Sets.ExerciseType.Name)</td>
            </tr>
            <tr>
                <th>Set Type</th>
                <td>@Html.DisplayFor(model => model.Rep.Sets.Settype.Name)</td>
            </tr>
        </table>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4>Rep Information</h4>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Rep Number</th>
                <td>@Html.DisplayFor(model => model.Rep.repnumber)</td>
            </tr>
            <tr>
                <th>Weight (kg)</th>
                <td>@Html.DisplayFor(model => model.Rep.weight)</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    @if (Model.Rep.success)
                    {
                        <span class="badge bg-success">Success</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Failed</span>
                    }
                </td>
            </tr>
        </table>
    </div>
</div>
    
<form method="post" class="mt-3">
    <input type="hidden" asp-for="Rep.RepId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Sets/Details" asp-route-id="@Model.Rep.SetsSetId" class="btn btn-secondary">Cancel</a>
</form>
