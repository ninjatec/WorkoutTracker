@page
@model WorkoutTrackerWeb.Pages.Sessions.CreateModel

@{
    ViewData["Title"] = "Create Workout";
}
        
<h1>Create Workout</h1>
        
<h4>New Workout Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkoutSession.Name" class="control-label">Workout Name</label>
                <input asp-for="WorkoutSession.Name" class="form-control" />
                <span asp-validation-for="WorkoutSession.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutSession.StartDateTime" class="control-label">Start Time</label>
                <input asp-for="WorkoutSession.StartDateTime" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-dd\\THH:mm")" />
                <span asp-validation-for="WorkoutSession.StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutSession.Description" class="control-label">Notes</label>
                <textarea asp-for="WorkoutSession.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="WorkoutSession.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
