@page
@model WorkoutTrackerWeb.Pages.Sessions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @Model.ErrorMessage
    </div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Session</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.datetime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.datetime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.User.Name)
        </dd>
        @if (!string.IsNullOrEmpty(Model.Session.Notes))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Session.Notes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Session.Notes)
            </dd>
        }
    </dl>
    
    <div class="alert alert-warning">
        <p><strong>Warning!</strong> This will permanently delete this session and all its associated data:</p>
        <ul>
            <li>All exercise sets in this session</li>
            <li>All repetition records for those sets</li>
        </ul>
        <p>This action cannot be undone.</p>
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="Session.SessionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
