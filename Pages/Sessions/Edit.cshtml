@page
@model WorkoutTrackerWeb.Pages.Sessions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Session.SessionId" />
            <input type="hidden" asp-for="Session.UserId" />
            <div class="form-group">
                <label asp-for="Session.Name" class="control-label"></label>
                <input asp-for="Session.Name" class="form-control" />
                <span asp-validation-for="Session.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.datetime" class="control-label"></label>
                <input asp-for="Session.datetime" class="form-control" />
                <span asp-validation-for="Session.datetime" class="text-danger"></span>
            </div>
            <!-- User dropdown removed - sessions are tied to the current user -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
