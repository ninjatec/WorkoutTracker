@page
@model WorkoutTrackerWeb.Pages.Sessions.EditModel

@{
    ViewData["Title"] = "Edit Workout";
}

<h1>Edit Workout</h1>

<h4>Workout Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkoutSession.WorkoutSessionId" />
            <input type="hidden" asp-for="WorkoutSession.UserId" />
            <div class="form-group">
                <label asp-for="WorkoutSession.Name" class="control-label">Name</label>
                <input asp-for="WorkoutSession.Name" class="form-control" />
                <span asp-validation-for="WorkoutSession.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutSession.StartDateTime" class="control-label">Start Time</label>
                <input asp-for="WorkoutSession.StartDateTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="WorkoutSession.StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutSession.EndDateTime" class="control-label">End Time</label>
                <input asp-for="WorkoutSession.EndDateTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="WorkoutSession.EndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutSession.Description" class="control-label">Notes</label>
                <textarea asp-for="WorkoutSession.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="WorkoutSession.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Format datetime-local inputs
        document.addEventListener('DOMContentLoaded', function () {
            function formatDateForInput(date) {
                if (!date) return '';
                return date.slice(0, 16); // Keep only YYYY-MM-DDTHH:mm
            }
            
            var startTime = document.querySelector('[asp-for="WorkoutSession.StartDateTime"]');
            var endTime = document.querySelector('[asp-for="WorkoutSession.EndDateTime"]');
            
            if (startTime.value) {
                startTime.value = formatDateForInput(startTime.value);
            }
            if (endTime.value) {
                endTime.value = formatDateForInput(endTime.value);
            }
        });
    </script>
}
