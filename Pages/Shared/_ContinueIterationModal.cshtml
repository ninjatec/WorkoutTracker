@model string

<div class="modal fade" id="continueIterationModal" tabindex="-1" aria-labelledby="continueIterationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="continueIterationModalLabel">Continue Iteration?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Would you like to continue to the next iteration?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="submit" class="btn btn-primary" id="confirmContinueIteration">Yes, Continue</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const modal = new bootstrap.Modal(document.getElementById('continueIterationModal'));
            
            document.getElementById('confirmContinueIteration').addEventListener('click', function() {
                // Handle the continuation confirmation
                document.getElementById('continueIterationForm').submit();
            });
        });
    </script>
}