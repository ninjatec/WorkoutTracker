@model WorkoutSession

@if (Model != null && Model.IsCompleted && Model.NextIterationId == null)
{
    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">Continue this workout?</h5>
            <p class="card-text">Would you like to start another iteration of this workout with the same exercises?</p>
            <form method="post" asp-page-handler="StartNextIteration" asp-route-id="@Model.WorkoutSessionId">
                <button type="submit" class="btn btn-primary">Start Next Iteration</button>
                <a href="@Url.Page("/Index")" class="btn btn-secondary">No, I'm Done</a>
            </form>
        </div>
    </div>
}