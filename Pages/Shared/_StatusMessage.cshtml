@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "danger" : 
                            Model.StartsWith("Success") ? "success" : 
                            Model.StartsWith("Warning") ? "warning" : "info";
    <div class="alert alert-@statusMessageClass alert-dismissible fade show" role="alert">
        <span>@Model</span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}