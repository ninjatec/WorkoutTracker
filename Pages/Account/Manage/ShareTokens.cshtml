@page
@model WorkoutTrackerWeb.Pages.Account.Manage.ShareTokensModel
@{
    ViewData["Title"] = "Manage Share Tokens";
}

<h1>Account Management</h1>

<div class="row">
    <div class="col-md-3">
        <div class="list-group mb-4">
            <a asp-page="./Index" class="list-group-item list-group-item-action">Profile</a>
            <a asp-page="./ShareTokens" class="list-group-item list-group-item-action active">Share Tokens</a>
        </div>
    </div>
    <div class="col-md-9">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <partial name="_StatusMessage" for="StatusMessage" />

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Create New Share Token</h5>
                        <button class="btn btn-sm btn-primary" type="button" data-toggle="collapse" data-target="#collapseNewToken">
                            <i class="bi bi-plus-circle"></i> Create Token
                        </button>
                    </div>
                    <div class="collapse" id="collapseNewToken">
                        <div class="card-body">
                            <form method="post" asp-page-handler="Create">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CreateTokenInput.Name"></label>
                                            <input asp-for="CreateTokenInput.Name" class="form-control" />
                                            <span asp-validation-for="CreateTokenInput.Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="CreateTokenInput.Description"></label>
                                            <textarea asp-for="CreateTokenInput.Description" class="form-control" rows="2"></textarea>
                                            <span asp-validation-for="CreateTokenInput.Description" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="CreateTokenInput.SessionId"></label>
                                            <select asp-for="CreateTokenInput.SessionId" asp-items="Model.SessionItems" class="form-control"></select>
                                            <small class="form-text text-muted">Leave empty to share all sessions.</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="CreateTokenInput.ExpiryDays"></label>
                                            <input asp-for="CreateTokenInput.ExpiryDays" class="form-control" />
                                            <span asp-validation-for="CreateTokenInput.ExpiryDays" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="CreateTokenInput.MaxAccessCount"></label>
                                            <input asp-for="CreateTokenInput.MaxAccessCount" class="form-control" placeholder="Unlimited" />
                                            <span asp-validation-for="CreateTokenInput.MaxAccessCount" class="text-danger"></span>
                                            <small class="form-text text-muted">Leave empty for unlimited access.</small>
                                        </div>
                                        <div class="form-group">
                                            <label>Permissions</label>
                                            <div class="custom-control custom-checkbox">
                                                <input asp-for="CreateTokenInput.AllowSessionAccess" class="custom-control-input" />
                                                <label asp-for="CreateTokenInput.AllowSessionAccess" class="custom-control-label"></label>
                                            </div>
                                            <div class="custom-control custom-checkbox">
                                                <input asp-for="CreateTokenInput.AllowReportAccess" class="custom-control-input" />
                                                <label asp-for="CreateTokenInput.AllowReportAccess" class="custom-control-label"></label>
                                            </div>
                                            <div class="custom-control custom-checkbox">
                                                <input asp-for="CreateTokenInput.AllowCalculatorAccess" class="custom-control-input" />
                                                <label asp-for="CreateTokenInput.AllowCalculatorAccess" class="custom-control-label"></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group text-right">
                                    <button type="submit" class="btn btn-success">Create Token</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Your Share Tokens</h5>
                    </div>
                    <div class="card-body">
                        @if (!Model.UserTokens.Any())
                        {
                            <div class="alert alert-info">
                                <p class="mb-0">You haven't created any share tokens yet. Use the form above to create your first token.</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Created</th>
                                            <th>Expires</th>
                                            <th>Status</th>
                                            <th>Usage</th>
                                            <th>Permissions</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var token in Model.UserTokens)
                                        {
                                            <tr class="@(!token.IsValid ? "table-danger" : "")">
                                                <td>
                                                    <strong>@(string.IsNullOrEmpty(token.Name) ? $"Share {token.CreatedAt:yyyy-MM-dd}" : token.Name)</strong>
                                                    @if (!string.IsNullOrEmpty(token.Description))
                                                    {
                                                        <br /><small class="text-muted">@token.Description</small>
                                                    }
                                                    @if (token.SessionId.HasValue)
                                                    {
                                                        <br /><span class="badge badge-info">Session: @token.SessionName</span>
                                                    }
                                                </td>
                                                <td>@token.CreatedAt.ToString("g")</td>
                                                <td>
                                                    @token.ExpiresAt.ToString("g")
                                                    @if (token.IsValid)
                                                    {
                                                        <br />
                                                        @if (token.DaysUntilExpiration > 0)
                                                        {
                                                            <small class="text-muted">@token.DaysUntilExpiration days left</small>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-danger">Expires today</small>
                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    @if (token.IsValid)
                                                    {
                                                        <span class="badge badge-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        if (!token.IsActive)
                                                        {
                                                            <span class="badge badge-secondary">Revoked</span>
                                                        }
                                                        else if (token.ExpiresAt <= DateTime.UtcNow)
                                                        {
                                                            <span class="badge badge-warning">Expired</span>
                                                        }
                                                        else if (token.HasUsageLimits && token.RemainingUses <= 0)
                                                        {
                                                            <span class="badge badge-info">Usage limit reached</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger">Invalid</span>
                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    <span>@token.AccessCount uses</span>
                                                    @if (token.HasUsageLimits)
                                                    {
                                                        <br />
                                                        <small class="@(token.RemainingUses < 3 ? "text-danger" : "text-muted")">
                                                            @token.RemainingUses of @token.MaxAccessCount remaining
                                                        </small>
                                                    }
                                                </td>
                                                <td>
                                                    <ul class="list-unstyled mb-0">
                                                        @if (token.AllowSessionAccess)
                                                        {
                                                            <li><i class="bi bi-check-circle text-success"></i> Sessions</li>
                                                        }
                                                        else
                                                        {
                                                            <li><i class="bi bi-x-circle text-danger"></i> Sessions</li>
                                                        }
                                                        
                                                        @if (token.AllowReportAccess)
                                                        {
                                                            <li><i class="bi bi-check-circle text-success"></i> Reports</li>
                                                        }
                                                        else
                                                        {
                                                            <li><i class="bi bi-x-circle text-danger"></i> Reports</li>
                                                        }
                                                        
                                                        @if (token.AllowCalculatorAccess)
                                                        {
                                                            <li><i class="bi bi-check-circle text-success"></i> Calculator</li>
                                                        }
                                                        else
                                                        {
                                                            <li><i class="bi bi-x-circle text-danger"></i> Calculator</li>
                                                        }
                                                    </ul>
                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-sm btn-info" 
                                                                data-toggle="modal" 
                                                                data-target="#tokenModal-@token.Id" 
                                                                title="View Token">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-primary" 
                                                                data-toggle="modal" 
                                                                data-target="#editModal-@token.Id" 
                                                                title="Edit">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        @if (token.IsActive)
                                                        {
                                                            <button type="button" class="btn btn-sm btn-warning" 
                                                                    data-toggle="modal" 
                                                                    data-target="#revokeModal-@token.Id" 
                                                                    title="Revoke">
                                                                <i class="bi bi-ban"></i>
                                                            </button>
                                                        }
                                                        <button type="button" class="btn btn-sm btn-danger" 
                                                                data-toggle="modal" 
                                                                data-target="#deleteModal-@token.Id" 
                                                                title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>

                                                    <!-- View Token Modal -->
                                                    <div class="modal fade" id="tokenModal-@token.Id" tabindex="-1" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Share Token</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Share this link with others to give them access to your workout data:</p>
                                                                    <div class="input-group mb-3">
                                                                        <input type="text" class="form-control" id="tokenValue-@token.Id" 
                                                                              value="@($"{HttpContext.Request.Scheme}://{HttpContext.Request.Host}/Shared/Index?token={token.Token}")" 
                                                                              readonly>
                                                                        <div class="input-group-append">
                                                                            <button class="btn btn-outline-secondary" type="button" 
                                                                                    onclick="copyToken('@token.Id')">
                                                                                <i class="bi bi-clipboard"></i> Copy
                                                                            </button>
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label>Token</label>
                                                                        <input type="text" class="form-control" value="@token.Token" readonly>
                                                                        <small class="text-muted">This is the raw token value.</small>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Edit Modal -->
                                                    <div class="modal fade" id="editModal-@token.Id" tabindex="-1" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <form method="post" asp-page-handler="Update">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title">Edit Share Token</h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <input type="hidden" name="EditTokenInput.Id" value="@token.Id" />
                                                                        
                                                                        <div class="form-group">
                                                                            <label for="EditTokenInput_Name_@token.Id">Name</label>
                                                                            <input type="text" class="form-control" id="EditTokenInput_Name_@token.Id" 
                                                                                   name="EditTokenInput.Name" value="@token.Name" maxlength="100">
                                                                        </div>
                                                                        
                                                                        <div class="form-group">
                                                                            <label for="EditTokenInput_Description_@token.Id">Description</label>
                                                                            <textarea class="form-control" id="EditTokenInput_Description_@token.Id" 
                                                                                      name="EditTokenInput.Description" rows="2" maxlength="500">@token.Description</textarea>
                                                                        </div>
                                                                        
                                                                        <div class="form-group">
                                                                            <label for="EditTokenInput_ExpiryDays_@token.Id">Add Days to Expiry</label>
                                                                            <input type="number" class="form-control" id="EditTokenInput_ExpiryDays_@token.Id" 
                                                                                   name="EditTokenInput.ExpiryDays" value="7" min="0" max="365">
                                                                            <small class="text-muted">Current expiry: @token.ExpiresAt.ToString("g")</small>
                                                                        </div>
                                                                        
                                                                        <div class="form-group">
                                                                            <label for="EditTokenInput_MaxAccessCount_@token.Id">Maximum Access Count</label>
                                                                            <input type="number" class="form-control" id="EditTokenInput_MaxAccessCount_@token.Id" 
                                                                                   name="EditTokenInput.MaxAccessCount" value="@token.MaxAccessCount" min="1">
                                                                            <small class="text-muted">Current usage: @token.AccessCount. Leave empty for unlimited access.</small>
                                                                        </div>
                                                                        
                                                                        <div class="form-group">
                                                                            <label>Permissions</label>
                                                                            <div class="custom-control custom-checkbox">
                                                                                <input type="checkbox" class="custom-control-input" id="EditTokenInput_AllowSessionAccess_@token.Id" 
                                                                                       name="EditTokenInput.AllowSessionAccess" @(token.AllowSessionAccess ? "checked" : "")>
                                                                                <label class="custom-control-label" for="EditTokenInput_AllowSessionAccess_@token.Id">Allow access to sessions</label>
                                                                            </div>
                                                                            <div class="custom-control custom-checkbox">
                                                                                <input type="checkbox" class="custom-control-input" id="EditTokenInput_AllowReportAccess_@token.Id" 
                                                                                       name="EditTokenInput.AllowReportAccess" @(token.AllowReportAccess ? "checked" : "")>
                                                                                <label class="custom-control-label" for="EditTokenInput_AllowReportAccess_@token.Id">Allow access to reports</label>
                                                                            </div>
                                                                            <div class="custom-control custom-checkbox">
                                                                                <input type="checkbox" class="custom-control-input" id="EditTokenInput_AllowCalculatorAccess_@token.Id" 
                                                                                       name="EditTokenInput.AllowCalculatorAccess" @(token.AllowCalculatorAccess ? "checked" : "")>
                                                                                <label class="custom-control-label" for="EditTokenInput_AllowCalculatorAccess_@token.Id">Allow access to calculator</label>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Revoke Modal -->
                                                    <div class="modal fade" id="revokeModal-@token.Id" tabindex="-1" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Revoke Token</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you sure you want to revoke this share token? The token will no longer be valid, and anyone using it will lose access to your workout data.</p>
                                                                    <p><strong>This action cannot be undone.</strong> You'll need to create a new token if you want to restore access.</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <form method="post" asp-page-handler="Revoke">
                                                                        <input type="hidden" name="id" value="@token.Id" />
                                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                                        <button type="submit" class="btn btn-warning">Revoke Token</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Delete Modal -->
                                                    <div class="modal fade" id="deleteModal-@token.Id" tabindex="-1" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Delete Token</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you sure you want to permanently delete this share token? The token will be completely removed from the system.</p>
                                                                    <p><strong>This action cannot be undone.</strong> If you just want to temporarily disable access, consider using the Revoke option instead.</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <form method="post" asp-page-handler="Delete">
                                                                        <input type="hidden" name="id" value="@token.Id" />
                                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                                        <button type="submit" class="btn btn-danger">Delete Token</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function copyToken(id) {
            var tokenInput = document.getElementById('tokenValue-' + id);
            tokenInput.select();
            document.execCommand('copy');
            
            // Show temporary feedback
            var button = event.currentTarget;
            var originalText = button.innerHTML;
            button.innerHTML = '<i class="bi bi-check"></i> Copied!';
            setTimeout(function() {
                button.innerHTML = originalText;
            }, 2000);
        }
    </script>
}