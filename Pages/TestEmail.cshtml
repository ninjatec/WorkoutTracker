@page
@model WorkoutTrackerWeb.Pages.TestEmailModel
@{
    ViewData["Title"] = "Test Email Configuration";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3>Test Email Configuration</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">This page allows you to test the email configuration by sending a test email.</p>
                    
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")">
                            <p>@Model.StatusMessage</p>
                        </div>
                    }
                    
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="recipientEmail">Recipient Email:</label>
                            <input type="email" class="form-control" id="recipientEmail" name="RecipientEmail" required>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Send Test Email</button>
                    </form>
                    
                    <div class="mt-4">
                        <h4>Email Settings</h4>
                        <p>Current email configuration:</p>
                        <ul>
                            <li><strong>Mail Server:</strong> @Model.Settings.MailServer</li>
                            <li><strong>Mail Port:</strong> @Model.Settings.MailPort</li>
                            <li><strong>Sender Name:</strong> @Model.Settings.SenderName</li>
                            <li><strong>Sender Email:</strong> @Model.Settings.SenderEmail</li>
                            <li><strong>Use SSL:</strong> @Model.Settings.UseSsl</li>
                        </ul>
                        <div class="alert alert-warning">
                            <p><strong>Note:</strong> To update these settings, modify the EmailSettings section in appsettings.json.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>