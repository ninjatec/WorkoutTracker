@page
@model WorkoutTrackerWeb.Pages.ExerciseTypes.IndexModel

@{
    ViewData["Title"] = "Exercise Types";
}

<h1>Exercise Types</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseTypes[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ExerciseTypes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ExerciseTypeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ExerciseTypeId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ExerciseTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>