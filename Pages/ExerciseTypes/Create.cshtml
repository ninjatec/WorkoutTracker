@page
@model WorkoutTrackerWeb.Pages.ExerciseTypes.CreateModel

@{
    ViewData["Title"] = "Create Exercise";
}

<h1>Create Exercise</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h4>New Exercise</h4>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ExerciseType.Name" class="form-label"></label>
                                <input asp-for="ExerciseType.Name" class="form-control" />
                                <span asp-validation-for="ExerciseType.Name" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="ExerciseType.Description" class="form-label"></label>
                                <textarea asp-for="ExerciseType.Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="ExerciseType.Description" class="text-danger"></span>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ExerciseType.Type" class="form-label"></label>
                                    <select asp-for="ExerciseType.Type" class="form-select">
                                        <option value="">-- Select Type --</option>
                                        <option value="cardio">Cardio</option>
                                        <option value="olympic_weightlifting">Olympic Weightlifting</option>
                                        <option value="plyometrics">Plyometrics</option>
                                        <option value="powerlifting">Powerlifting</option>
                                        <option value="strength">Strength</option>
                                        <option value="stretching">Stretching</option>
                                        <option value="strongman">Strongman</option>
                                    </select>
                                    <span asp-validation-for="ExerciseType.Type" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ExerciseType.Difficulty" class="form-label"></label>
                                    <select asp-for="ExerciseType.Difficulty" class="form-select">
                                        <option value="">-- Select Difficulty --</option>
                                        <option value="beginner">Beginner</option>
                                        <option value="intermediate">Intermediate</option>
                                        <option value="expert">Expert</option>
                                    </select>
                                    <span asp-validation-for="ExerciseType.Difficulty" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ExerciseType.Muscle" class="form-label"></label>
                                    <select asp-for="ExerciseType.Muscle" class="form-select">
                                        <option value="">-- Select Muscle --</option>
                                        <option value="abdominals">Abdominals</option>
                                        <option value="abductors">Abductors</option>
                                        <option value="adductors">Adductors</option>
                                        <option value="biceps">Biceps</option>
                                        <option value="calves">Calves</option>
                                        <option value="chest">Chest</option>
                                        <option value="forearms">Forearms</option>
                                        <option value="glutes">Glutes</option>
                                        <option value="hamstrings">Hamstrings</option>
                                        <option value="lats">Lats</option>
                                        <option value="lower_back">Lower Back</option>
                                        <option value="middle_back">Middle Back</option>
                                        <option value="neck">Neck</option>
                                        <option value="quadriceps">Quadriceps</option>
                                        <option value="shoulders">Shoulders</option>
                                        <option value="traps">Traps</option>
                                        <option value="triceps">Triceps</option>
                                    </select>
                                    <span asp-validation-for="ExerciseType.Muscle" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ExerciseType.Equipment" class="form-label"></label>
                                    <input asp-for="ExerciseType.Equipment" class="form-control" />
                                    <span asp-validation-for="ExerciseType.Equipment" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ExerciseType.Instructions" class="form-label"></label>
                                <textarea asp-for="ExerciseType.Instructions" class="form-control" rows="15"></textarea>
                                <span asp-validation-for="ExerciseType.Instructions" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Back to List
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./ApiImport" class="btn btn-info">
                            <i class="fas fa-cloud-download-alt"></i> Import from API
                        </a>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}