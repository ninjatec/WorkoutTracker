@page
@model WorkoutTrackerWeb.Pages.Errors.NotFoundModel
@{
    ViewData["Title"] = "Page Not Found";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mt-5">
                <div class="mb-4">
                    <i class="fas fa-search fa-5x text-primary"></i>
                </div>
                
                <h1 class="display-1 text-primary">404</h1>
                <h2 class="mb-4">Page Not Found</h2>
                
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle"></i>
                    The page you are looking for does not exist or has been moved.
                </div>
                
                @if (!string.IsNullOrEmpty(Model.RequestId))
                {
                    <p class="small text-muted mb-4">
                        <strong>Reference ID:</strong> @Model.RequestId
                    </p>
                }
                
                <div class="mt-4">
                    <a href="/" class="btn btn-primary me-2">
                        <i class="fas fa-home"></i> Return to Home
                    </a>
                    <button onclick="history.back()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Go Back
                    </button>
                </div>
                
                <div class="mt-5">
                    <h5>Popular Pages:</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="/Workouts" class="card text-decoration-none h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-dumbbell fa-2x text-primary mb-2"></i>
                                    <h6 class="card-title">Workouts</h6>
                                    <small class="text-muted">Track your workouts</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="/Goals" class="card text-decoration-none h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-target fa-2x text-success mb-2"></i>
                                    <h6 class="card-title">Goals</h6>
                                    <small class="text-muted">Set and achieve goals</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="/Feedback/Create" class="card text-decoration-none h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-comment fa-2x text-info mb-2"></i>
                                    <h6 class="card-title">Feedback</h6>
                                    <small class="text-muted">Send us feedback</small>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>