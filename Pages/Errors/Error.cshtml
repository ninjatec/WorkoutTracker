@page
@model WorkoutTrackerWeb.Pages.Errors.ErrorModel
@{
    ViewData["Title"] = $"Error {Model.ErrorCode}";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mt-5">
                <div class="error-icon mb-4">
                    <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
                </div>
                
                <h1 class="display-1 mb-3">@Model.ErrorCode</h1>
                <h2 class="mb-4">@Model.ErrorMessage</h2>
                
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle"></i>
                    We're working to resolve this issue. If the problem persists, please contact support.
                </div>
                
                @if (!string.IsNullOrEmpty(Model.RequestId))
                {
                    <p class="small text-muted mb-4">
                        <strong>Reference ID:</strong> @Model.RequestId
                    </p>
                }
                
                <div class="mt-4">
                    <a href="/" class="btn btn-primary me-2">
                        <i class="fas fa-home"></i> Return to Home
                    </a>
                    <button onclick="history.back()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Go Back
                    </button>
                </div>
                
                @if (Model.ErrorCode == "404")
                {
                    <div class="mt-4">
                        <h5>Helpful Links:</h5>
                        <div class="list-group list-group-horizontal-md d-flex justify-content-center">
                            <a href="/Workouts" class="list-group-item list-group-item-action">
                                <i class="fas fa-dumbbell"></i> Workouts
                            </a>
                            <a href="/Goals" class="list-group-item list-group-item-action">
                                <i class="fas fa-target"></i> Goals
                            </a>
                            <a href="/Feedback/Create" class="list-group-item list-group-item-action">
                                <i class="fas fa-comment"></i> Feedback
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>