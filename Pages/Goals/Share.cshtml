@page
@model WorkoutTrackerWeb.Pages.Goals.ShareModel
@{
    ViewData["Title"] = "Shared Goal";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (Model.Goal != null)
            {
                <div class="card border-primary shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h4><i class="bi bi-trophy"></i> Fitness Goal Achievement</h4>
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Goal.Description</h5>
                        <p class="text-muted">Category: <span class="badge bg-secondary">@Model.Goal.Category</span></p>
                        
                        <div class="mt-4 mb-4">
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%">
                                    Completed!
                                </div>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.Goal.MeasurementType))
                        {
                            <div class="d-flex justify-content-center">
                                <div class="text-center px-4">
                                    <h6 class="text-muted">Starting</h6>
                                    <h4>@Model.Goal.StartValue @Model.Goal.MeasurementUnit</h4>
                                </div>
                                <div class="text-center px-4">
                                    <h6 class="text-muted">Target</h6>
                                    <h4>@Model.Goal.TargetValue @Model.Goal.MeasurementUnit</h4>
                                </div>
                                <div class="text-center px-4">
                                    <h6 class="text-muted">Achieved</h6>
                                    <h4>@Model.Goal.CurrentValue @Model.Goal.MeasurementUnit</h4>
                                </div>
                            </div>
                        }
                        
                        <div class="alert alert-success mt-4">
                            <i class="bi bi-check-circle-fill"></i> Completed on @Model.Goal.CompletedDate.Value.ToString("MMMM d, yyyy")
                        </div>
                        
                        <div class="text-center mt-4">
                            <p>Shared by @Model.UserName</p>
                        </div>
                        
                        <div class="d-flex justify-content-center mt-4">
                            <a href="https://twitter.com/intent/tweet?text=I just achieved my fitness goal: @Model.Goal.Description!&url=@Request.Scheme://@Request.Host@Request.Path" 
                               class="btn btn-outline-primary mx-2" target="_blank">
                                <i class="bi bi-twitter"></i> Tweet
                            </a>
                            <a href="https://www.facebook.com/sharer/sharer.php?u=@Request.Scheme://@Request.Host@Request.Path" 
                               class="btn btn-outline-primary mx-2" target="_blank">
                                <i class="bi bi-facebook"></i> Share
                            </a>
                            <a href="https://www.linkedin.com/sharing/share-offsite/?url=@Request.Scheme://@Request.Host@Request.Path" 
                               class="btn btn-outline-primary mx-2" target="_blank">
                                <i class="bi bi-linkedin"></i> LinkedIn
                            </a>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/" class="btn btn-primary">Join Workout Tracker</a>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Goal Not Found</h4>
                    <p>The goal you're looking for doesn't exist or isn't shared publicly.</p>
                    <hr>
                    <p class="mb-0">Try returning to the <a href="/">home page</a>.</p>
                </div>
            }
        </div>
    </div>
</div>