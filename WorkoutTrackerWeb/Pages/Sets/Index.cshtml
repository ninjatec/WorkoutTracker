@page
@model WorkoutTrackerWeb.Pages.Sets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Set[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Set[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Set[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Set[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Set[0].Session)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Set[0].Excercise)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Set) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Session.SessionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Excercise.ExcerciseId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SetId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SetId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
