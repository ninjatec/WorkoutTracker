@page
@model WorkoutTrackerWeb.Pages.Excercises.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Excercise</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Excercise.ExcerciseId" />
            <div class="form-group">
                
                <label asp-for="Excercise.Name" class="control-label"></label>
                <input asp-for="Excercise.Name" class="form-control" />
                <span asp-validation-for="Excercise.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Excercise.SessionId" class="control-label"></label>
                <select asp-for="Excercise.SessionId" class="form-control" asp-items="ViewBag.SessionId"></select>
                <span asp-validation-for="Excercise.SessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Excercise.UserId" class="control-label"></label>
                <select asp-for="Excercise.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Excercise.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
