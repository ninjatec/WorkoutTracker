@model WorkoutTrackerWeb.Models.WorkoutSession
@{
    ViewData["Title"] = "Workout Details";
    Layout = "_SharedLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Workout Session</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Sessions
    </a>
</div>

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                @Model.StartDateTime.ToString("MMMM d, yyyy") at @Model.StartDateTime.ToString("h:mm tt")
            </h5>
            @if (Model.Duration > 0)
            {
                <span class="badge bg-light text-dark">
                    Duration: @TimeSpan.FromMinutes(Model.Duration).ToString(@"hh\:mm\:ss")
                </span>
            }
        </div>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="mb-3">
                <h6>Session Notes:</h6>
                <p class="mb-0">@Model.Description</p>
            </div>
        }
        
        @if (ViewBag.TotalVolume != null)
        {
            <div class="row text-center stats-summary">
                <div class="col-md-3 col-6 mb-3">
                    <div class="card bg-light">
                        <div class="card-body py-2">
                            <div class="h5 mb-0">@ViewBag.TotalSets</div>
                            <small class="text-muted">Total Sets</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="card bg-light">
                        <div class="card-body py-2">
                            <div class="h5 mb-0">@ViewBag.TotalReps</div>
                            <small class="text-muted">Total Reps</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="card bg-light">
                        <div class="card-body py-2">
                            <div class="h5 mb-0">@ViewBag.TotalVolume.ToString("N0") kg</div>
                            <small class="text-muted">Total Volume</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="card bg-light">
                        <div class="card-body py-2">
                            <div class="h5 mb-0">@ViewBag.UniqueExercises</div>
                            <small class="text-muted">Exercises</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (ViewBag.ExerciseSets != null && ViewBag.ExerciseSets.Count > 0)
{
    <div class="exercise-timeline">
        @foreach (var exerciseGroup in ViewBag.ExerciseSets)
        {
            <div class="exercise-group mb-4">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">@exerciseGroup.Key</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-center">#</th>
                                        <th>Type</th>
                                        <th class="text-center">Weight</th>
                                        <th class="text-center">Reps</th>
                                        <th class="text-center">Distance</th>
                                        <th class="text-center">Duration</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int setCounter = 1; }
                                    @foreach (var set in exerciseGroup.Value)
                                    {
                                        <tr>
                                            <td class="text-center">@(setCounter++)</td>
                                            <td>@set.SetType</td>
                                            <td class="text-center">
                                                @if (set.Weight.HasValue && set.Weight.Value > 0)
                                                {
                                                    <span>@set.Weight kg</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (set.Reps.HasValue && set.Reps.Value > 0)
                                                {
                                                    <span>@set.Reps</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (set.Distance.HasValue && set.Distance.Value > 0)
                                                {
                                                    <span>@set.Distance m</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (set.Duration.HasValue)
                                                {
                                                    <span>@set.Duration.Value.ToString(@"mm\:ss")</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(set.Notes))
                                                {
                                                    <span>@set.Notes</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p class="mb-0">No exercises or sets have been recorded for this session.</p>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add any client-side interaction here if needed
        });
    </script>
}