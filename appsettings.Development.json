{
  "DetailedErrors": true,
  "ConnectionStrings": {
    "DefaultConnection": "User Secrets",
    "WorkoutTrackerWebContext": "User Secrets"
  },
  "EmailSettings": {
    "MailServer": "smtp.office365.com",
    "MailPort": 587,
    "SenderName": "WorkoutTracker",
    "SenderEmail": "no-reply@workouttracker.online",
    "UserName": "no-reply@workouttracker.online",
    "Password": "YourEmailPassword",
    "UseSsl": true,
    "AdminEmail": "marc.coxall@ninjatec.co.uk"
  },
  "Hangfire": {
    "ProcessingEnabled": true,
    "WorkerCount": 2,
    "ServerName": "dev-server",
    "HeartbeatInterval": "00:00:15"
  },
  "ScheduledWorkoutProcessor": {
    "HoursAdvanceCreation": 24,
    "MaximumHoursLate": 1,
    "UseLocalTimeZone": true,
    "CreateMissedWorkouts": true,
    "MaxDaysForMissedWorkouts": 7,
    "MarkMissedWorkoutsAsLate": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Hangfire": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/workouttracker-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "WorkoutTracker",
      "Environment": "Development"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
