@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    @if (Model.StatusMessage.Contains("Thank you"))
                    {
                        <div class="alert alert-success">
                            <h4><i class="fas fa-check-circle"></i> Success!</h4>
                            <p>@Model.StatusMessage</p>
                            <p>Your email has been verified and your account is now active.</p>
                            <p>You can now <a href="/Identity/Account/Login" class="btn btn-primary">Login</a> and start using WorkoutTracker.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h4><i class="fas fa-exclamation-circle"></i> Error</h4>
                            <p>@Model.StatusMessage</p>
                            <p>There was a problem confirming your email. The confirmation link may have expired or already been used.</p>
                            <p>Please try <a href="/Identity/Account/ResendEmailConfirmation" class="alert-link">requesting a new confirmation link</a>.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
