@page "{id:int}"
@model WorkoutTrackerWeb.Areas.Admin.Pages.Blog.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container">
    <h1>Delete Category</h1>
    
    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this category?</h3>
        <p>This action cannot be undone. All posts will be removed from this category, but the posts themselves will not be deleted.</p>
    </div>
    
    <div class="card mb-4">
        <div class="card-header">
            <h4>@Model.Category.Name</h4>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <h5>Slug</h5>
                <p>@Model.Category.Slug</p>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.Category.Description))
            {
                <div class="mb-3">
                    <h5>Description</h5>
                    <p>@Model.Category.Description</p>
                </div>
            }
            
            <div class="mb-3">
                <h5>Post Count</h5>
                <p>This category is assigned to <strong>@Model.AssociatedPostCount</strong> posts.</p>
            </div>
        </div>
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
