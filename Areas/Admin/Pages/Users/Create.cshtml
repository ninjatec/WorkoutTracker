@page
@model WorkoutTrackerWeb.Areas.Admin.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Create New User</h1>
        <div>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="UserCreate.Email" class="form-label"></label>
                            <input asp-for="UserCreate.Email" class="form-control" />
                            <span asp-validation-for="UserCreate.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UserCreate.Password" class="form-label"></label>
                            <input asp-for="UserCreate.Password" class="form-control" />
                            <span asp-validation-for="UserCreate.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UserCreate.ConfirmPassword" class="form-label"></label>
                            <input asp-for="UserCreate.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="UserCreate.ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UserCreate.PhoneNumber" class="form-label"></label>
                            <input asp-for="UserCreate.PhoneNumber" class="form-control" />
                            <span asp-validation-for="UserCreate.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="UserCreate.EmailConfirmed">
                                <label class="form-check-label" asp-for="UserCreate.EmailConfirmed"></label>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="UserCreate.SelectedRoles" class="form-label">Roles</label>
                            <div class="card">
                                <div class="card-body">
                                    @foreach (var role in Model.UserCreate.AvailableRoles)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" 
                                                   name="UserCreate.SelectedRoles" value="@role.Name" 
                                                   id="role_@role.Name">
                                            <label class="form-check-label" for="role_@role.Name">
                                                @role.Name
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-person-plus"></i> Create User
                            </button>
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Help</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>Email:</strong> A valid email address is required. This will be used for login and communication.</p>
                    <p class="mb-1"><strong>Password:</strong> Must be at least 6 characters long and contain a mix of letters and numbers.</p>
                    <p class="mb-1"><strong>Phone Number:</strong> Optional contact information.</p>
                    <p class="mb-1"><strong>Email Confirmed:</strong> Skip email confirmation process if checked.</p>
                    <p class="mb-0"><strong>Roles:</strong> Assign security roles to control access permissions.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}