@page
@model WorkoutTrackerWeb.Areas.Admin.Pages.Users.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Reset User Password</h1>
        <div>
            <a asp-page="./Details" asp-route-id="@Model.ResetPassword.Id" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to User
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Reset Password for @Model.UserEmail</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="ResetPassword.Id" />
                        <input type="hidden" asp-for="ResetPassword.Email" />
                        
                        <div class="mb-3">
                            <label asp-for="ResetPassword.Password" class="form-label"></label>
                            <input asp-for="ResetPassword.Password" class="form-control" />
                            <span asp-validation-for="ResetPassword.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ResetPassword.ConfirmPassword" class="form-label"></label>
                            <input asp-for="ResetPassword.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ResetPassword.ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-key"></i> Reset Password
                            </button>
                            <a asp-page="./Details" asp-route-id="@Model.ResetPassword.Id" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-warning">
                    <h5 class="mb-0 text-dark">⚠️ Important</h5>
                </div>
                <div class="card-body">
                    <p>Resetting a user's password:</p>
                    <ul>
                        <li>Will immediately invalidate the user's current password</li>
                        <li>Will log out the user from any active sessions</li>
                        <li>Should be communicated to the user through a secure channel</li>
                        <li>Password must be at least 6 characters long</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}