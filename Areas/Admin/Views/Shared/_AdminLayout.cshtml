@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="admin-header mb-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="admin-title">Admin Control Panel</h1>
            </div>
            <div>
                <nav class="admin-breadcrumb">
                    <ol class="breadcrumb bg-dark p-2 rounded">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-page="/Index" class="text-light">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        @if (ViewData["Title"] != null)
                        {
                            <li class="breadcrumb-item active text-light" aria-current="page">@ViewData["Title"]</li>
                        }
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="list-group admin-sidebar">
                <a asp-area="Admin" asp-page="/Index" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active" : "")">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a asp-area="Admin" asp-page="/Users/Index" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Users") == true ? "active" : "")">
                    <i class="bi bi-people me-2"></i> User Management
                </a>
                <a asp-area="Admin" asp-page="/Feedback/Index" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Feedback") == true ? "active" : "")">
                    <i class="bi bi-chat-dots me-2"></i> Feedback Management
                </a>
                <a asp-area="Admin" asp-page="/Versions/Index" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Versions") == true ? "active" : "")">
                    <i class="bi bi-tag me-2"></i> Version Management
                </a>
                <div class="list-group-item list-group-item-primary">
                    <i class="bi bi-gear me-2"></i> System Settings
                </div>
                <a asp-area="Admin" asp-page="/Logging/Configure" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Logging") == true ? "active" : "")">
                    <i class="bi bi-sliders me-2"></i> Log Configuration
                </a>
                <a href="/health" target="_blank" class="list-group-item list-group-item-action">
                    <i class="bi bi-heart-pulse me-2"></i> Health Checks
                </a>
                <a href="/logs" class="list-group-item list-group-item-action">
                    <i class="bi bi-journal-text me-2"></i> System Logs
                </a>
            </div>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Add admin-specific JavaScript here if needed
    </script>
}

@section Styles {
    <style>
        .admin-header {
            background-color: var(--primary-dark);
            color: var(--text-light);
            padding: 1rem 0;
            margin-top: -1rem;
            box-shadow: 0 3px 5px rgba(0,0,0,0.2);
        }
        
        .admin-title {
            margin: 0;
            font-size: 1.5rem;
            font-weight: 600;
        }
        
        .admin-sidebar .list-group-item.active {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .admin-breadcrumb {
            font-size: 0.875rem;
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
}